<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All downvotes
    </h1>

    <a href="/downvotes/new" class="btn btn-block btn-outline-secondary">
      Add a new downvote
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Stock
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @downvotes.each do |downvote| %>
      <tr>
        <!-- Display downvote.id start -->
        <td>
          <%= downvote.id %>
        </td>
        <!-- Display downvote.id end -->

        <!-- Display downvote.user_id start -->
        <td>
          <%= downvote.user_id %>
        </td>
        <!-- Display downvote.user_id end -->

        <!-- Display downvote.stock_id start -->
        <td>
          <%= downvote.stock_id %>
        </td>
        <!-- Display downvote.stock_id end -->

        <!-- Display downvote.created_at start -->
        <td>
          <%= time_ago_in_words(downvote.created_at) %> ago
        </td>
        <!-- Display downvote.created_at end -->

        <!-- Display downvote.updated_at start -->
        <td>
          <%= time_ago_in_words(downvote.updated_at) %> ago
        </td>
        <!-- Display downvote.updated_at end -->

        <td>
          <a href="/downvotes/<%= downvote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
