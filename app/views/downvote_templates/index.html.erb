<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All downvotes
    </h1>

    <a href="/downvotes/new" class="btn btn-block btn-outline-secondary">
      Add a new downvote
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "downvote_templates/downvotes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Stock
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @downvotes.each do |downvote| %>
      <tr>
        <td>
          <%= downvote.id %>
        </td>

        <td>
          <%= downvote.user_id %>
        </td>

        <td>
          <%= downvote.stock_id %>
        </td>

        <td>
          <%= time_ago_in_words(downvote.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(downvote.updated_at) %> ago
        </td>

        <td>
          <a href="/downvotes/<%= downvote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @downvotes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
