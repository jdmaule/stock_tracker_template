<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Downvote #<%= @downvote.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/downvotes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/downvotes/<%= @downvote.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit downvote
        </a>
      </div>

      <div class="col">
        <a href="/delete_downvote/<%= @downvote.id %>" class="btn btn-block btn-outline-secondary">
          Delete downvote
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @downvote.user_id %>
      </dd>

      <dt>
        Stock
      </dt>
      <dd>
        <%= @downvote.stock_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@downvote.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@downvote.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

