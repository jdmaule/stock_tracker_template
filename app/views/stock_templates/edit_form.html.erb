<h1>
  Edit stock #<%= @stock.id %>
</h1>

<hr>

<form action="/update_stock/<%= @stock.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <input type="text" id="caption" name="caption" class="form-control" value="<%= @stock.caption %>">
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <%= cl_image_tag(@stock.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="image" name="image" class="form-control">
  </div>


  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @stock.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update stock
  </button>
</form>

<hr>

<a href="/stocks">
  Go back
</a>
