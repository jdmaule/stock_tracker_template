<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All stocks
    </h1>

    <a href="/stocks/new" class="btn btn-block btn-outline-secondary">
      Add a new stock
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @stocks.each do |stock| %>
      <tr>
        <!-- Display stock.id start -->
        <td>
          <%= stock.id %>
        </td>
        <!-- Display stock.id end -->

        <!-- Display stock.caption start -->
        <td>
          <%= stock.caption %>
        </td>
        <!-- Display stock.caption end -->

        <!-- Display stock.image start -->
        <td>
          <%= stock.image %>
        </td>
        <!-- Display stock.image end -->

        <!-- Display stock.owner_id start -->
        <td>
          <%= stock.owner_id %>
        </td>
        <!-- Display stock.owner_id end -->

        <!-- Display stock.location start -->
        <td>
          <%= stock.location %>
        </td>
        <!-- Display stock.location end -->

        <!-- Display stock.created_at start -->
        <td>
          <%= time_ago_in_words(stock.created_at) %> ago
        </td>
        <!-- Display stock.created_at end -->

        <!-- Display stock.updated_at start -->
        <td>
          <%= time_ago_in_words(stock.updated_at) %> ago
        </td>
        <!-- Display stock.updated_at end -->

        <td>
          <a href="/stocks/<%= stock.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
