<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Stock #<%= @stock.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/stocks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link stock start -->
      <div class="col">
        <a href="/stocks/<%= @stock.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit stock
        </a>
      </div>
      <!-- Edit link stock end -->

      <!-- Delete link stock start -->
      <div class="col">
        <a href="/delete_stock/<%= @stock.id %>" class="btn btn-block btn-outline-secondary">
          Delete stock
        </a>
      </div>
      <!-- Delete link stock end -->
    </div>

    <dl>
      <dt>
        Caption
      </dt>
      <!-- Display caption start -->
      <dd>
        <%= @stock.caption %>
      </dd>
      <!-- Display caption end -->

      <dt>
        Image
      </dt>
      <!-- Display image start -->
      <dd>
        <%= @stock.image %>
      </dd>
      <!-- Display image end -->

      <dt>
        Owner
      </dt>
      <!-- Display owner_id start -->
      <dd>
        <%= @stock.owner_id %>
      </dd>
      <!-- Display owner_id end -->

      <dt>
        Location
      </dt>
      <!-- Display location start -->
      <dd>
        <%= @stock.location %>
      </dd>
      <!-- Display location end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@stock.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@stock.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "stock_templates/stock_likes" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "stock_templates/stock_comments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "stock_templates/stock_fan_followers" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "stock_templates/stock_followers" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "stock_templates/stock_fans" %>
  </div>
</div>
<!-- Show Page Customization end -->
