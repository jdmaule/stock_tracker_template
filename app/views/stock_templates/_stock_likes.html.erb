<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#stock_likes_new_form">
      Add upvote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @stock.likes.each do |upvote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/upvotes/<%= upvote.id %>">
          <%= upvote.created_at %>
        </a>

        <%if current_user == upvote.user %>
          <a href="/delete_upvote_from_stock/<%= upvote.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="stock_likes_new_form">
        <%= render partial: "stock_templates/stock_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
