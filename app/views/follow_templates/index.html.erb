<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All follows
    </h1>

    <a href="/follows/new" class="btn btn-block btn-outline-secondary">
      Add a new follow
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "follow_templates/follows_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Stock
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>
        <td>
          <%= follow.id %>
        </td>

        <td>
          <% if follow.user.present? %>
            <a href="/users/<%= follow.user.id %>">
              <%= follow.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if follow.stock.present? %>
            <a href="/stocks/<%= follow.stock.id %>">
              <%= follow.stock.ticker %>
            </a>
          <% end %>
        </td>

        <td>
          <%= follow.notes %>
        </td>

        <td>
          <%= time_ago_in_words(follow.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(follow.updated_at) %> ago
        </td>

        <td>
          <a href="/follows/<%= follow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @follows, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
