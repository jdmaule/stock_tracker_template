<% if @follow.present? %>
  <% if @follow.errors.any? %>
    <% @follow.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new follow
</h1>


<hr>

<form action="/create_follow" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <%= select_tag(:stock_id, options_from_collection_for_select(Stock.all, :id, :ticker, @follow.stock_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <input type="text" id="notes" name="notes" class="form-control" value="<%= @follow.notes %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create follow
  </button>
</form>

<hr>

<a href="/follows">
  Go back
</a>
