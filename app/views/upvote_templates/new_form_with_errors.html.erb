<!-- Validation failure messages -->
<% if @upvote.present? %>
  <% if @upvote.errors.any? %>
    <% @upvote.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new upvote
</h1>


<hr>

<!-- Form upvote start -->
<form action="/create_upvote" method="post">
<!-- Form upvote end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @upvote.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for stock_id start -->
  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <!-- Input for stock_id start -->
    <%= select_tag(:stock_id, options_from_collection_for_select(Stock.all, :id, :caption, @upvote.stock_id), :class => "form-control") %>
    <!-- Input for stock_id end -->
  </div>
  <!-- Label and input for stock_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create upvote
  </button>
</form>

<hr>

<a href="/upvotes">
  Go back
</a>
