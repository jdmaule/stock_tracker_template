<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All upvotes
    </h1>

    <a href="/upvotes/new" class="btn btn-block btn-outline-secondary">
      Add a new upvote
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "upvote_templates/upvotes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Stock
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @upvotes.each do |upvote| %>
      <tr>
        <td>
          <%= upvote.id %>
        </td>

        <td>
          <% if upvote.user.present? %>
            <a href="/users/<%= upvote.user.id %>">
              <%= upvote.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if upvote.photo.present? %>
            <a href="/stocks/<%= upvote.photo.id %>">
              <%= upvote.photo.caption %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(upvote.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(upvote.updated_at) %> ago
        </td>

        <td>
          <a href="/upvotes/<%= upvote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @upvotes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
