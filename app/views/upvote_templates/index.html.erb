<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All upvotes
    </h1>

    <a href="/upvotes/new" class="btn btn-block btn-outline-secondary">
      Add a new upvote
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Stock
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @upvotes.each do |upvote| %>
      <tr>
        <!-- Display upvote.id start -->
        <td>
          <%= upvote.id %>
        </td>
        <!-- Display upvote.id end -->

        <!-- Display upvote.user_id start -->
        <td>
          <%= upvote.user.username %>
        </td>
        <!-- Display upvote.user_id end -->

        <!-- Display upvote.stock_id start -->
        <td>
          <%= upvote.photo.caption %>
        </td>
        <!-- Display upvote.stock_id end -->

        <!-- Display upvote.created_at start -->
        <td>
          <%= time_ago_in_words(upvote.created_at) %> ago
        </td>
        <!-- Display upvote.created_at end -->

        <!-- Display upvote.updated_at start -->
        <td>
          <%= time_ago_in_words(upvote.updated_at) %> ago
        </td>
        <!-- Display upvote.updated_at end -->

        <td>
          <a href="/upvotes/<%= upvote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @upvotes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
